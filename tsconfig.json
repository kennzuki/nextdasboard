{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/dashboard/page.tsx",
    "app/dashboard/latest-invoices.tsx",
    "app/dashboard/layout.jsx",
    "app/dashboard/nav-links.tsx",
    "app/dashboard/revenue-chart.tsx",
    "app/dashboard/sidenav.tsx",
    "app/ui/acme-logo.tsx",
    "app/ui/button.tsx",
    "app/ui/login-form.tsx",
    "app/ui/search.tsx",
    "app/ui/skeletons.jsx",
    "app/dashboard/cards.tsx",
    "app/dashboard/customers/page.tsx",
    "app/dashboard/invoices/table.tsx",
    "app/dashboard/invoices/status.jsx",
    "app/dashboard/invoices/pagination.tsx",
    "app/dashboard/invoices/edit-form.tsx",
    "app/dashboard/invoices/create-form.tsx",
    "app/dashboard/invoices/buttons.tsx",
    "app/dashboard/customers/table.tsx"
, "app/layout.tsx"  ],
  "exclude": ["node_modules"]
}
