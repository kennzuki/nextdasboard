{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/dashboard/page.jsx",
    "app/dashboard/latest-invoices.jsx",
    "app/dashboard/layout.jsx",
    "app/dashboard/nav-links.jsx",
    "app/dashboard/revenue-chart.jsx",
    "app/dashboard/sidenav.jsx",
    "app/ui/acme-logo.jsx",
    "app/ui/button.jsx",
    "app/ui/login-form.jsx",
    "app/ui/search.jsx",
    "app/ui/skeletons.jsx",
    "app/dashboard/cards.jsx",
    "app/dashboard/customers/page.jsx",
    "app/dashboard/invoices/table.jsx",
    "app/dashboard/invoices/status.jsx",
    "app/dashboard/invoices/pagination.jsx",
    "app/dashboard/invoices/edit-form.jsx",
    "app/dashboard/invoices/create-form.jsx",
    "app/dashboard/invoices/buttons.jsx",
    "app/dashboard/customers/table.jsx"
  ],
  "exclude": ["node_modules"]
}
